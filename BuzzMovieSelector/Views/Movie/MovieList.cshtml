@model IList<RottenTomatoes.Api.Movie>
@{
    ViewBag.Title = "MovieList";
}

<h2>Movie List</h2>
@Html.ActionLink("New Search", "SearchMovies")
@if (Model.Count == 0)
{
    <h2>Sorry! No movies can be found with that search. Please @Html.ActionLink("try again.", "SearchMovies")</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                Pick a Movie to Rate
            </th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Title, "RateMovie", new { movieID = movie.Id })
                </td>
            </tr>
        }
    </table>
}


