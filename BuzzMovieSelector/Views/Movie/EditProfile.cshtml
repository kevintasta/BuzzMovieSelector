@model BuzzMovieSelector.DataAccess.User
@{
    ViewBag.Title = "Profile";
}

<h2>Edit Profile</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => Model.UserId)
    @Html.HiddenFor(x => Model.Email)
    <div class="form-horizontal">
        <div class="form-group row">
            <div class="col-md-2">
                <h3 style="margin-top: -2px">First Name</h3>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(x => Model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <h3 style="margin-top: -2px">Last Name</h3>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(x => Model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <h3 style="margin-top: -2px">Major</h3>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(x => Model.Major, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-2 form-group">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>

}
<br />
@Html.ActionLink("Back to Dashboard", "Index")
